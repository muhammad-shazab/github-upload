<%= render 'top_nav'%>
<div style="margin-top: 200px;margin-left: 50px">
  <p ><h1>Completed Orders:</h1></p>
</div>
<div style="width: 90%">  
  <table  class="table table-hover" style="margin: 50px;margin-right: 50px">
      <tr>
        <th>Product Name</th>
        <th>Color</th>
        <th>Gender</th>
        <th>Price</th>
        <th>Payment</th>
        <th>Customer Email</th>
        <th>Order Date</th>
      </tr>
      <tbody id="book_table">
      <% @orders.each do |order| %>
          <tr class="table-active">
                <%customer=order.customer%>
                <%variant=order.variant%>
                <td><%="#{variant.brand_name}'s #{variant.product.category}"%></td>
                <td><%= variant.color%></td>
                <td><%= variant.gender%></td>
                <td><%= variant.price%></td>
                <td><%= order.quantity * variant.price%></td>
                <td><%= customer.email%></td>
                <td><%=order.created_at%></td>
              </tr>
      <% end %>
      </tbody>

    </table>
  </div>